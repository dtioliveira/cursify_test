<div class="w-form">
  <h1 class="post-title pull-right"><%= @post.send("title_" + current_locale) %></h1>
  <div class="post-date pull-right"><%= link_to @post.user.name, profile_path(@post.user) %>- <%= @post.created_at.strftime("%d/%m/%Y - %H:%M") %></div>
  <div class="w-richtext">
    <%= simple_format(@post.send("text_" + current_locale)) %>
  </div>

  <%= tag_list_from @post %>

  <div class="rating-box">
    <div><%= t('default.rate_this_post') %></div>
    <%= rating_for @post, "like", star: 5, star_path: '/images', enable_half: true, disable_after_rate: true, cancel: true %>
  </div>
  <%= render 'comments/form' %>
</div>

<div id="comments">
  <% @comments.each do |comment| %>
    <%= render 'comments/comment', comment: comment %>
  <% end %>
</div>
