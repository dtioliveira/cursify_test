                    <div class="avatar-circle sm"></div><a href="#" class="user-name"><strong data-new-link="true">Diego Oliveira</strong></a>
                    <div>diegoitarare@gmail.com</div>
                    <div class="center"><a href="#" class="w-button btn-danger btn-sm">Banir</a><a href="#" class="w-button btn-success btn-sm">Tornar admin</a>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
