<h1 class="page-header"><%= t('title.sign_in_or_register') %></h1>
<div class="w-row">
  <div class="w-col w-col-5">
    <div class="w-form">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.input :email, placeholder: t('helper.placeholder.email'), input_html: { class: 'w-input input-rounded' } %>
        <%= f.input :password, placeholder: t('helper.placeholder.new_password'), input_html: { class: 'w-input input-rounded' } %>

        <div class="pull-right">
          <%= f.submit t('default.enter'), class: 'w-button', data: { disable_with: t('default.wait') } %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="w-col w-col-1"></div>

  <div class="w-col w-col-6">
    <div class="w-form">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <%= render 'layouts/error_box', resource: resource %>

        <%= f.input :name, placeholder: t('helper.placeholder.name'), input_html: { class: 'w-input input-rounded' } %>
        <%= f.input :email, placeholder: t('helper.placeholder.email'), input_html: { class: 'w-input input-rounded' } %>
        <%= f.input :password, placeholder: t('helper.placeholder.password'), input_html: { class: 'w-input input-rounded' } %>
        <%= f.input :password_confirmation, placeholder: t('helper.placeholder.password_confirmation'), input_html: { class: 'w-input input-rounded' } %>

        <div class="pull-right">
          <%= f.button :submit, class: 'w-button', data: { disable_with: t('default.wait') } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
