<div class="relationship-situation">
  <% if !@user.has_relationship?(current_user) %>
    <div class="center">
      <%= simple_form_for :relationship, url: create_relationship_path, method: :post, remote: true do |f| %>
        <%= f.input :user_id, as: :hidden, input_html: { value: @user.id } %>
        <%= f.submit "Adicionar como amigo",
        class: 'w-button add-friend',
        data: { disable_with: 'Enviando...' },
        style: 'margin-top: 10px;' %>
      <% end %>
      <!-- <%# link_to "Banir usuÃ¡rio", "#", class: 'w-button ban-user' %> -->
    </div>
  <% else %>
    <%= simple_form_for :relationship, url: destroy_relationship_path, method: :post, remote: true do |f| %>
      <%= f.input :user_id, as: :hidden, input_html: { value: @user.id } %>
      <%= f.submit "Desfazer amizade",
      class: 'unfriend-link',
      data: { disable_with: 'Enviando...' },
      style: 'margin-top: 10px;' %>
    <% end %>
  <% end %>
</div>
