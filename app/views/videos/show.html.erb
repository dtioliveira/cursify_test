<div class="w-form">
  <h1 class="post-title pull-right"><%= @video.send("title_#{current_locale}") %></h1>
  <div class="post-date pull-right"><%= link_to @video.user.name, profile_path(@video.user) %>- <%= @video.created_at.strftime("%d/%m/%Y - %H:%M") %></div>
  <div style="padding-top: 56.17021276595745%;" class="w-embed w-video">
    <iframe class="embedly-embed" src="http://www.youtube.com/embed/<%= @video.parse_url %>?autoplay=1" scrolling="no" frameborder="0" allowfullscreen=""></iframe>
  </div>

  <%= tag_list_from @video %>

  <div class="rating-box">
    <div><%= t('default.rate_this_post') %></div>
    <%= rating_for @video, "like", star: 5, enable_half: true, disable_after_rate: true, cancel: true %>
  </div>

  <%= render 'comments/form' %>
</div>

<div id="comments">
  <% @comments.each do |comment| %>
    <%= render 'comments/comment', comment: comment %>
  <% end %>
</div>
