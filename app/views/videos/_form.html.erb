<div class="w-form">
  <%= simple_form_for @video do |f| %>

    <%= render 'layouts/error_box', resource: @video %>

    <%= f.input :title_pt, placeholder: 'Título da publicação', input_html: { class: 'w-input input-rounded' } %>
    <%= f.input :title_es, placeholder: 'Título da publicação', input_html: { class: 'w-input input-rounded' } %>
    <%= f.input :url, placeholder: 'URL do vídeo', input_html: { class: 'w-input input-rounded' } %>

    <hr>
    <%= f.input :tags_pt, input_html: { class: 'w-input input-rounded tags' } %>
    <hr>
    <%= f.input :tags_es, input_html: { class: 'w-input input-rounded tags' } %>

    <div class="pull-right" style="margin-top: 20px;">
      <%= f.button :submit, class: 'w-button', data: { disable_with: 'Salvando...' } %>
    </div>
  <% end %>
</div>


<%= content_for :bottom_js do %>
  <script type="text/javascript">
    $('.tags').tagsInput({
      'height':'100px',
      'width':'100%',
      'interactive':true,
      'defaultText':'',
      'delimiter': [',',';'],   // Or a string with a single delimiter. Ex: ';'
      'removeWithBackspace' : true,
      'minChars' : 3,
      'placeholderColor' : '#666666'
    });
  </script>
<% end %>
