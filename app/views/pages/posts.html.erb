<h1 class="highlight-title"><%= t('title.posts') %></h1>
<%= render 'shared/search_form', url: all_posts_path, placeholder: t('helper.placeholder.tags')%>

<% if @posts.any? %>
  <% @posts.each do |post| %>
    <%= render 'posts/post', post: post %>
  <% end %>

  <%= paginate @posts %>
<% else %>
  <div style="margin-top: 20px;" class="alert alert-info"><strong><%= t('default.post') %></strong>: <%= t('post.empty_with_term') %></div>
<% end %>
