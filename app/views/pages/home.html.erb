<section>
  <div class="w-container main">
    <%= render 'shared/language_options' %>
    <div class="w-row">
      <div class="w-col w-col-3 w-clearfix">
        <%= render 'shared/user_card', user: current_user %>
      </div>

      <div class="w-col w-col-9">
        <h1 class="highlight-title">PRINCIPAIS NOTÍCIAS</h1>
        <%= render 'shared/search_form', url: all_posts_path %>

        <% @posts.each do |post| %>
          <%= render 'posts/post', post: post %>
        <% end %>

        <h1 class="highlight-title">PRINCIPAIS VÍDEOS</h1>
        <%= render 'shared/search_form', url: all_videos_path %>

        <% @videos.each do |video| %>
          <%= render 'videos/video', video: video %>
        <% end %>
      </div>
    </div>
  </div>
</section>
