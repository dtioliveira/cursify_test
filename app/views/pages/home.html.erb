<% if @posts.any? %>
  <h1 class="highlight-title"><%= t('title.featured_posts') %></h1>
  <%= render 'shared/search_form', url: all_posts_path, placeholder: t('helper.placeholder.tags') %>
  <% @posts.each do |post| %>
    <%= render 'posts/post', post: post %>
  <% end %>
  <div class="pull-right">
    <%= link_to t('default.see_all'), all_posts_path %>
  </div>
<% else %>
  <div class="alert alert-info"><strong><%= t('default.post') %></strong>: <%= t('post.empty') %></div>
<% end %>

<% if @videos.any? %>
  <h1 class="highlight-title"><%= t('title.featured_videos') %></h1>
  <%= render 'shared/search_form', url: all_videos_path, placeholder: t('helper.placeholder.tags') %>
  <% @videos.each do |video| %>
    <%= render 'videos/video', video: video %>
  <% end %>
  <div class="pull-right">
    <%= link_to t('default.see_all'), all_videos_path %>
  </div>
<% else %>
  <div class="alert alert-info"><strong><%= t('default.video') %></strong>: <%= t('video.empty') %></div>
<% end %>
