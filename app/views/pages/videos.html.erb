<h1 class="highlight-title"><%= t('title.videos') %></h1>
<%= render 'shared/search_form', url: all_videos_path %>

<% if @videos.any? %>
  <% @videos.each do |video| %>
    <%= render 'videos/video', video: video %>
  <% end %>
  <%= paginate @videos %>
<% else %>
  <div style="margin-top: 20px;" class="alert alert-info"><strong><%= t('default.video') %></strong>: <%= t('video.empty_with_term') %></div>
<% end %>
